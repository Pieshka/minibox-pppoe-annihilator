image boot.vfat {
    vfat {
        files = {
            "boot.scr",
            "Image",
            "rk3328-nanopi-r2s.dtb"
        }
    }
    size = @BOOT_SIZE@
}

image sdcard.img {
	hdimage {
	}

	partition u-boot-tpl-spl-dtb {
		in-partition-table = "no"
		image = "idbloader.img"
		offset = 32K
	}

	partition u-boot-dtb {
		in-partition-table = "no"
		image = "u-boot.itb"
		offset = 8M
	}

    partition boot {
        partition-type = 0xC
        bootable = "yes"
        image = "boot.vfat"
        align = 1M
    }

	partition rootfs {
		partition-type = 0x83
		image = "rootfs.ext4"
        align = 1M
	}
}
